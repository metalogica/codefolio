---
import '../../styles/global.css';
import { AstroSeo } from '@astrolib/seo';
import { getImage } from 'astro:assets';
import macBackground1 from '../../assets/images/mac-background1.jpg';
import macBackground2 from '../../assets/images/mac-background2.jpg';
import macBackground3 from '../../assets/images/mac-background3.jpg';

const backgrounds = await Promise.all([
  getImage({ src: macBackground1, width: 3500 }),
  getImage({ src: macBackground2, width: 3500 }),
  getImage({ src: macBackground3, width: 3500 }),
]);
---

<meta charset='UTF-8' />
<meta http-equiv='X-UA-Compatible' content='IE=edge' />
<meta
  name='viewport'
  content='width=device-width, initial-scale=1, maximum-scale=1'
/>
<meta name='author' content='rei jarram' />

<AstroSeo
  title={Astro.props.title || 'Rei Jarram - Full Stack Developer'}
  description={Astro.props.description ||
    'Full Stack Developer based in Montreal, QC specializing in React, Node.js, and modern web technologies'}
  canonical={Astro.props.canonical || 'https://rei.gg'}
  openGraph={{
    url: Astro.props.openGraph?.url || 'https://rei.gg',
    title: Astro.props.openGraph?.title || 'John Doe - Full Stack Developer',
    description:
      Astro.props.openGraph?.description ||
      'Full Stack Developer based in Montreal, QC specializing in React, Node.js, and modern web technologies',
    images: [
      {
        url: '',
      },
    ],
    site_name: Astro.props.openGraph?.site_name || 'John Doe',
  }}
/>

