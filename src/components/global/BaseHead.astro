<meta name='theme-color' content='YOUR_COLOR_HEX' />

<link rel='sitemap' href='/sitemap-index.xml' />

{
  backgrounds.map((bg) => (
    <link
      rel='preload'
      href={bg.src}
      as='image'
      type='image/webp'
      fetchpriority='high'
    />
  ))
}
